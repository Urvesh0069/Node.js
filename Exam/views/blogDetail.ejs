<% var body = `
<h2>${blog.title}</h2>
<p>${blog.content}</p>
<p><strong>Author:</strong> ${blog.author.username}</p>

<hr>

<h3>Comments</h3>

${comments.map(c => `
<p><strong>${c.user.username}:</strong> ${c.text}</p>
`).join("")}

<form action="/api/comments/${blog._id}" method="POST">
  <textarea name="text" required></textarea>
  <input name="user" placeholder="User ID" required>
  <button>Add Comment</button>
</form>
` %>

<%- include("layout.ejs", { title: blog.title, body: body }) %>
